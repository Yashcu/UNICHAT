{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../../dist/server",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["./**/*", "./global.d.ts"],
  "exclude": ["node_modules"]
}